<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="359.0" prefWidth="338.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <BorderPane prefHeight="352.0" prefWidth="374.0">
         <bottom>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#pressLogin" prefHeight="30.0" prefWidth="173.0" text="Login" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="30.0" top="10.0" />
               </BorderPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </bottom>
         <center>
            <VBox prefHeight="85.0" prefWidth="231.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtUser" promptText="username">
                     <font>
                        <Font size="14.0" />
                     </font></TextField>
                  <PasswordField fx:id="txtPassword" promptText="password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
               </children>
               <BorderPane.margin>
                  <Insets left="100.0" right="100.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <top>
            <ImageView fitHeight="194.0" fitWidth="132.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/duncan.png" />
               </image>
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
            </ImageView>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
