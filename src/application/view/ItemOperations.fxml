<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ItemController">
<children>
    <BorderPane prefHeight="386.0" prefWidth="631.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="15.0">
        <bottom>
            <HBox prefHeight="40.0" prefWidth="570.0" spacing="10.0" BorderPane.alignment="CENTER">
                <children>
                    <TextField fx:id="txtName" promptText="Item Name" />
                    <TextField fx:id="txtQuantity" promptText="quantity" />
                    <TextField fx:id="txtCost" promptText="cost" />
                    <TextField fx:id="txtSale" promptText="sale" />
                    <Button fx:id="btnAddItem" mnemonicParsing="false" onAction="#pressAdd" text="Add" />
                    <Button fx:id="btnDeleteItem" mnemonicParsing="false" onAction="#pressDelete" text="Delete" />
                </children>
                <BorderPane.margin>
                    <Insets top="10.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>
        <center>
            <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="600.0">
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </TableView>
        </center>
    </BorderPane>
</children>
</AnchorPane>
