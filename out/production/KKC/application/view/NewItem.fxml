<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.NewItemController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <bottom>
            <HBox prefHeight="47.0" prefWidth="600.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#pressCancel" prefHeight="46.0" prefWidth="304.0" text="Cancel" />
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#pressSave" prefHeight="46.0" prefWidth="319.0" text="Save" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <GridPane prefHeight="343.0" prefWidth="551.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="251.0" minWidth="10.0" prefWidth="155.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="382.0" minWidth="10.0" prefWidth="345.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Name:">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <Label text="Produce Cost:" GridPane.rowIndex="1">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <Label text="Sale Cost:" GridPane.rowIndex="2">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <TextField fx:id="txtName" GridPane.columnIndex="1" />
                  <TextField fx:id="txtProduceCost" prefHeight="25.0" prefWidth="295.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="txtSaleCost" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Description:" GridPane.rowIndex="3">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <Label text="Quantity:" GridPane.rowIndex="4">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="1.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <children>
                        <Label fx:id="lblQuantity" text="0">
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnDecQty" mnemonicParsing="false" onAction="#pressDecreaseQuantity" prefHeight="49.0" prefWidth="53.0" text="-" />
                        <Button fx:id="btnIncQty" mnemonicParsing="false" onAction="#pressIncreaseQuantity" prefHeight="49.0" prefWidth="61.0" text="+" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets left="50.0" right="50.0" top="5.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
