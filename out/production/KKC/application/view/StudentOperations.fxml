<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.StudentController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="400.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="15.0">
         <bottom>
            <HBox prefHeight="40.0" prefWidth="570.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox fx:id="hboxBirthdate" prefHeight="100.0" prefWidth="200.0" />
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="studentTable" prefHeight="400.0" prefWidth="600.0">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TableView>
         </center>
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnNewStudent" mnemonicParsing="false" onAction="#pressNewStudent" prefHeight="104.0" prefWidth="105.0" text="New Student" />
                  <Button fx:id="btnStudentDetail" mnemonicParsing="false" onAction="#pressStudentDetail" prefHeight="114.0" prefWidth="100.0" text="Student Detail" />
                  <Button fx:id="btnRemoveStudent" mnemonicParsing="false" onAction="#pressRemove" prefHeight="105.0" prefWidth="100.0" text="Remove Student" />
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
