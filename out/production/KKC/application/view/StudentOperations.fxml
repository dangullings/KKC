<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="598.0" prefWidth="853.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.StudentController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="400.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <bottom>
            <HBox prefHeight="40.0" prefWidth="570.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox fx:id="hboxBirthdate" prefHeight="40.0" prefWidth="150.0">
                     <children>
                        <TextField fx:id="filterInput" prefHeight="40.0" prefWidth="150.0" promptText="filter">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin></TextField>
                     </children></HBox>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Button fx:id="btnListByRank" mnemonicParsing="false" onAction="#pressListByRank" prefHeight="40.0" prefWidth="150.0" text="List By Student Rank" />
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="studentTable" prefHeight="539.0" prefWidth="675.0">
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <right>
            <VBox prefHeight="529.0" prefWidth="119.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnNewStudent" mnemonicParsing="false" onAction="#pressNewStudent" prefHeight="175.0" prefWidth="120.0" text="New Student" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/addstudent.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Separator prefWidth="200.0" />
                  <Button fx:id="btnStudentDetail" mnemonicParsing="false" onAction="#pressStudentDetail" prefHeight="175.0" prefWidth="120.0" text="Student Detail" textAlignment="CENTER" wrapText="true">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/detailstudent.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Separator prefWidth="200.0" />
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#pressEditStudent" prefHeight="175.0" prefWidth="120.0" text="Edit Student" textAlignment="CENTER" wrapText="true">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/editstudent.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Separator prefWidth="200.0" />
                  <Button fx:id="btnRemoveStudent" mnemonicParsing="false" onAction="#pressRemove" prefHeight="175.0" prefWidth="120.0" text="Remove Student" textAlignment="CENTER" wrapText="true">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/removestudent.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Separator prefWidth="200.0" />
                  <Button fx:id="btnActiveView" mnemonicParsing="false" onAction="#pressActiveView" prefHeight="175.0" prefWidth="120.0" text="View Inactive" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
