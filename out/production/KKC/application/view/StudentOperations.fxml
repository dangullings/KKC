<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.StudentController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="400.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="15.0">
         <bottom>
            <HBox prefHeight="40.0" prefWidth="570.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtFirstName" promptText="First Name" />
                  <TextField fx:id="txtLastName" promptText="Last Name" />
                  <TextField fx:id="txtEmail" promptText="Email" />
                  <TextField fx:id="txtNumber" promptText="xxx-xxx-xxxx" />
                  <HBox fx:id="hboxBirthdate" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="txtYear" promptText="yyyy" />
                        <TextField fx:id="txtMonth" promptText="mm" />
                        <TextField fx:id="txtDay" promptText="dd" />
                     </children>
                  </HBox>
                  <Button fx:id="btnAddStudent" mnemonicParsing="false" onAction="#pressAdd" text="Add" />
                  <Button fx:id="btnDeleteStudent" mnemonicParsing="false" onAction="#pressDelete" text="Delete" />
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="studentTable" prefHeight="400.0" prefWidth="600.0">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TableView>
         </center>
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnStudentDetail" mnemonicParsing="false" onAction="#pressStudentDetail" prefHeight="114.0" prefWidth="100.0" text="Student Detail" />
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
