<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.NewTestController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <TableView fx:id="testStudentsTable" prefHeight="260.0" prefWidth="463.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin></TableView>
         </center>
         <bottom>
            <HBox prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="60.0" prefWidth="288.0" text="Cancel" />
                  <Button fx:id="btnSave" alignment="CENTER" mnemonicParsing="false" onAction="#saveTest" prefHeight="60.0" prefWidth="312.0" text="Save" />
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <right>
            <VBox prefHeight="260.0" prefWidth="117.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="studentsTable" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></TableView>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#pressAdd" prefHeight="25.0" prefWidth="117.0" text="Add Student(s)">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Button>
                  <Button fx:id="btnRemove" mnemonicParsing="false" prefHeight="27.0" prefWidth="116.0" text="Remove Student">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Button>
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" top="10.0" />
               </BorderPane.margin></VBox>
         </right>
         <top>
            <HBox prefHeight="48.0" prefWidth="600.0" spacing="50.0">
               <children>
                  <DatePicker fx:id="datePicker" onAction="#setTestDate" promptText="test date" />
                  <CheckBox fx:id="checkIsBlackbelt" mnemonicParsing="false" onAction="#typeChanged" prefHeight="49.0" prefWidth="148.0" text="Blackbelt" />
                  <ChoiceBox fx:id="choiceLocation" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
