<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="600.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
          <tabs>
              <Tab fx:id="students" onSelectionChanged="#studentTabSelected" text="Students">
                  <fx:include fx:id="studentOperations" source="StudentOperations.fxml" />
               <graphic>
                  <ImageView fitHeight="17.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/students.png" />
                     </image>
                  </ImageView>
               </graphic>
              </Tab>
              <Tab fx:id="tests" text="Tests">
                  <fx:include fx:id="testOperations" source="TestOperations.fxml" />
               <graphic>
                  <ImageView fitHeight="90.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/detail.png" />
                     </image>
                  </ImageView>
               </graphic>
              </Tab>
              <Tab fx:id="finances" text="Orders/Transactions">
                  <fx:include fx:id="financeOperations" source="TransactionOperations.fxml" />
                  <graphic>
                      <ImageView fitHeight="17.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@../images/orders.png" />
                          </image>
                      </ImageView>
                  </graphic>
              </Tab>
              <Tab fx:id="items" text="Inventory">
                  <fx:include fx:id="itemsOperations" source="InventoryOperations.fxml" />
              </Tab>
              <Tab fx:id="events" text="Attendance">
                  <fx:include fx:id="eventOperations" source="AttendanceOperations.fxml" />
              </Tab>
          </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox prefHeight="16.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
