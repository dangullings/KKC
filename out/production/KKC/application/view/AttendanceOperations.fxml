<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AttendanceController">
   <children>
      <BorderPane fx:id="borderpane" prefHeight="580.0" prefWidth="847.0">
         <right>
            <VBox prefHeight="522.0" prefWidth="79.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Year">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <Spinner fx:id="spinnerYear" onMouseClicked="#changeYear" prefHeight="25.0" prefWidth="79.0" />
                  <Label text="Month">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="spinnerMonth" onMouseClicked="#changeMonth" prefHeight="25.0" prefWidth="79.0" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <center>
            <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label text="Attendance" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
